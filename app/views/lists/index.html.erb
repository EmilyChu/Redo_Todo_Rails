<div class="container">
<h3> Current lists <h3>

<table>
  <tr>
  <th>List Name</th>
  </tr>
<% @list.each do |list| %>
  <tr>
  <td><%= link_to list.name, list_path(list) %></td>
  <td><%= link_to 'Edit List Name', edit_list_path(list) %></td>
  <td><%= link_to 'Delete List', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <td><%= link_to 'Add Item to List', list_items_path(list) %></td>
  </tr>
<% end %>
</table>

<br>
<%= button_to "Go back", root_path, method: "get", class: "btn btn-default" %>

</div>