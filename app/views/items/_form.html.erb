<%= form_for([@list, @list.items.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :due_date %><br>
    <%= f.text_field :due_date %>
  </p>
  <p>
    <%= f.label :done %><br>
    <%= f.text_field :done %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>